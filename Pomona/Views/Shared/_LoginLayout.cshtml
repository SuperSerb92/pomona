        </div>
  @*  </div>*@


    @(Html.DevExtreme().Popup().ID("popupFormCommon")
                .ShowCloseButton(true)
                .DragEnabled(true)
                .CloseOnOutsideClick(false)
                .ElementAttr("class", "popup")
                .OnContentReady("onContentReadyCommon")
                .OnHiding("onHidingCommon")
                //.OnResizeEnd("adjustSize")
                .Position(pos => pos
                    .My(HorizontalAlignment.Center, VerticalAlignment.Center)
                    .At(HorizontalAlignment.Center, VerticalAlignment.Center)
                    .Of(new JS("window"))
                )
                .ResizeEnabled(true)
    .ContentTemplate(
       new TemplateName("popup-templateCommon"))
    )
    @using (Html.DevExtreme().NamedTemplate("popup-templateCommon"))
    {
        @(Html.DevExtreme().ScrollView()
            .ID("scrollViewCommon")
            .Width("100%")
            .Height("100%")
            .Direction(ScrollDirection.Both)
        )
    }

